<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Listing Articles</h1>

      <% @articles.each do |article| %>
        <div class="article-box">
          <h3><%= link_to article.title, article %></h3>

          <%= link_to 'Edit', edit_article_path(article), class: "btn btn-warning btn-xs" %>
          <%= link_to 'Destroy', article, method: :delete, class: "btn btn-danger btn-xs", data: { confirm: 'Are you sure?' } %>
        </div>
      <% end %>
  <br>

  <%= link_to 'New Article', new_article_path, class: "btn btn-primary bottom-btn" %>

</div>
